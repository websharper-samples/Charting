<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <WebSharperProject>Bundle</WebSharperProject>
    <WebSharperBundleOutputDir>wwwroot/Content</WebSharperBundleOutputDir>
    <WebProjectOutputDir>$(MSBuildThisFileDirectory)/wwwroot</WebProjectOutputDir>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Client.fs" />
    <Compile Include="Startup.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.5" />
    <PackageReference Include="WebSharper" Version="4.5.1.304" />    
    <PackageReference Include="WebSharper.FSharp" Version="4.5.1.304" />
    <PackageReference Include="WebSharper.Charting" Version="4.5.0.221" />
    <PackageReference Include="WebSharper.ChartJs" Version="4.5.0.138" />
    <PackageReference Include="WebSharper.Reactive" Version="4.5.0.129" />
    <PackageReference Include="WebSharper.UI" Version="4.5.1.141" />
  </ItemGroup>

</Project>